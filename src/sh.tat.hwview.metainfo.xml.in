<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>sh.tat.@CMAKE_PROJECT_NAME@</id>
  <name>@DISPLAY_NAME@</name>
  <summary>@PROJECT_DESCRIPTION@</summary>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>
  <developer id="sh.tat">
    <name>Tatsh</name>
  </developer>
  <description>
    <p>
      @DISPLAY_NAME@ is a hardware information utility that allows you to view devices,
      drivers, and system resources in a tree view similar to Windows Device Manager.
    </p>
    <p>Features:</p>
    <ul>
      <li>View devices by type, connection, or driver</li>
      <li>View drivers by type or device</li>
      <li>View system resources by type or connection</li>
      <li>Export device information to JSON</li>
    </ul>
  </description>
  <launchable type="desktop-id">sh.tat.@CMAKE_PROJECT_NAME@.desktop</launchable>
  <url type="homepage">@PROJECT_HOMEPAGE_URL@</url>
  <url type="bugtracker">@PROJECT_HOMEPAGE_URL@/issues</url>
  <content_rating type="oars-1.1"/>
  <provides>
    <binary>hwview</binary>
  </provides>
  <releases>
    <release version="@PROJECT_VERSION@" date="@YEAR@-01-01"/>
  </releases>
</component>
